<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relative_layout_movie_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relative_layout_movie_thumbnail_height">

        <ImageView
            android:id="@+id/image_movie_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_movie_thumbnail_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/image_play_trailer"
            android:layout_width="@dimen/image_play_trailer_width"
            android:layout_height="@dimen/image_play_trailer_height"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_youtube"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_trailer_name"
        android:layout_marginBottom="@dimen/text_trailer_name_margin_bottom"
        tools:text="Official US Teaser Trailer"
        style="@style/title1Style"/>


</LinearLayout>